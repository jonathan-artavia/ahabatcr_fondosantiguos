@model IEnumerable<Fondos_Antiguos.Models.MateriaModel>
<dt>Materias</dt>
<hr />
<dd>
    <table class="table-borderless table-sm table-striped">
        @if (Model.Any())
        {
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                    </tr>
                }
            </tbody>
        }
        else
        {
            <tbody>
                <tr>
                    <td>
                        <sub>No hay materias asignadas.</sub>
                    </td>
                </tr>
            </tbody>
        }
    </table>
</dd>