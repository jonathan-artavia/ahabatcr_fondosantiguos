@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Cuenta", FormMethod.Post, new { id = "logoutForm", @class = "navbar-form navbar-right" }))
    {
        <ul class="navbar-nav">
            <li class="nav-item">
            @Html.AntiForgeryToken()
                <label class="nav-link text-dark">¡Hola, @User.Identity.Name!</label>
            </li>
            <li class="nav-item">
                <button class="nav-link btn btn-link text-dark" type="submit">Cerrar Sesión</button>
            </li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav navbar-right">
        <li class="nav-item">
            @Html.ActionLink("Iniciar Sesión", "Login", "Cuenta", null, new { @class = "nav-link text-dark" })
        </li>
    </ul>
}
